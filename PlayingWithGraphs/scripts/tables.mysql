DROP TABLE IF EXISTS Con, Node, Graph;
CREATE TABLE Graph 
(
	gid INT PRIMARY KEY AUTO_INCREMENT,
	graph_name TEXT
);
CREATE TABLE Node
(
	nid INT PRIMARY KEY AUTO_INCREMENT,
	ntext TEXT,
	x INT,
	y INT,
	gid INT,
	FOREIGN KEY (gid) REFERENCES Graph(gid) ON DELETE CASCADE
);
CREATE TABLE Con
(
	cid INT PRIMARY KEY AUTO_INCREMENT,
	n1 INT,
	n2 INT,
	FOREIGN KEY (n1) REFERENCES Node(nid) ON DELETE CASCADE,
	FOREIGN KEY (n2) REFERENCES Node(nid) ON DELETE CASCADE
);
update;